{% extends 'base.html.twig' %}

{% block title %}Se connecter - Koko le Koala{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="./css/authentification/login.css" rel="stylesheet">
{% endblock %}

{% block header %}

{% endblock %}

{% block body %}
    <div id="main_login">
        <div id="div_from_login">
            <form method="post" id="from_login">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div id="logo_part">
                    <img id="login_logo" src="{{ asset('/img/logo/logo_black.png') }}"/>
                </div>
                <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

                <div class="field">
                    <label for="inputUsername">Nom d'utilsateur</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                </div>
                <div class="field">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html#}

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>

                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
                <p id="login_register_link">Pas encore inscrit ? <a href="{{ path('app_register') }}">S'inscrire</a></p>
            </form>
        </div>
    </div>
{% endblock %}
