<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link href="{{ asset('css/reset/reset.css') }}" rel="stylesheet">
			<link href="{{ asset('css/nav_bar/nav_bar.css') }}" rel="stylesheet">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</head>
	<body>
		{% block header %}
			<header>
				<nav id="nav_bar">
					<div>
						<a href="{{ path('app_main') }}">
							<img src="./img/logo/logo_white.png" id="nav_bar_logo">
						</a>
					</div>
					<div id="nav_bar_menu_link">
						<ul>
							{% if is_granted('ROLE_USER') %}
								{% if is_granted('ROLE_USER') %}
									<li>
										<a href="{{ path('app_parent')}}">Tableau de bord</a>
									</li>
								{% else %}
									<li>
										<a href="{{ path('app_enfant')}}">Tableau de bord</a>
									</li>
								{% endif %}
								<li>
									<a href="{{ path('app_logout')}}">Se déconecter</a>
								</li>
							{% else %}
								<li>
									<a>Découvrir</a>
								</li>
								<li>
									<a>Contenus</a>
								</li>
								<li>
									<a>Qui sommes-nous ?</a>
								</li>
								<li>
									<a href="{{ path('app_register')}}">S'inscrire</a>
								</li>
								<li>
									<a id="connect" href="{{ path('app_login') }}">Se connecter</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</nav>
			</header>
		{% endblock %}
		{% block body %}{% endblock %}
	</body>
</html>
